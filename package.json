{
  "name": "slashnotes",
  "version": "1.0.0",
  "scripts": {
    "test": "CI=true jest",
    "build": "npm run build --workspaces --if-present",
    "dev": "concurrently \"npm:dev:*\"",
    "dev:server": "nodemon --exec 'npm run dev --workspace=packages/server' --watch packages/server/src --ext ts",
    "dev:web": "npm run dev --workspace=packages/web",
    "publish:nightly": "node nightly.js"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@faasjs/jest": "*",
    "@faasjs/eslint-config-recommended": "*",
    "@faasjs/eslint-config-react": "*",
    "tsup": "*",
    "concurrently": "*",
    "nodemon": "*",
    "ts-node": "*"
  },
  "eslintConfig": {
    "ignorePatterns": [
      "**/examples",
      "**/lib",
      "**/dist",
      "**/tmp"
    ],
    "extends": [
      "@faasjs/recommended",
      "@faasjs/react"
    ]
  },
  "jest": {
    "transform": {
      ".(jsx|tsx?)": "@faasjs/jest"
    },
    "collectCoverageFrom": [
      "**/packages/**/*.ts",
      "**/packages/**/*.tsx",
      "!**/local/**"
    ],
    "testRegex": "/*\\.test\\.tsx?$",
    "coveragePathIgnorePatterns": [
      "/dist/",
      "/__tests__/",
      "!*.d.ts"
    ],
    "moduleNameMapper": {
      "\\.(css|less|sass|jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "@faasjs/jest"
    }
  },
  "engines": {
    "npm": ">=8.0.0",
    "node": ">=16.0.0"
  }
}
