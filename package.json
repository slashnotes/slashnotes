{
  "name": "@slashnotes/mono",
  "version": "1.0.0",
  "type": "module",
  "license": "AGPL-3.0",
  "scripts": {
    "test": "npm run test --workspaces --if-present",
    "ci": "npm run ci --workspaces --if-present",
    "build": "npm run build --workspaces --if-present",
    "clean": "rm -rf packages/*/dist packages/*/*.tsbuildinfo packages/*/coverage",
    "dev": "concurrently \"npm:dev:*\"",
    "dev:server": "npm run dev --workspace=packages/server",
    "dev:web": "npm run dev --workspace=packages/web",
    "publish:nightly": "node nightly.cjs"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@faasjs/eslint-config-recommended": "*",
    "@faasjs/eslint-config-react": "*",
    "concurrently": "*"
  },
  "eslintConfig": {
    "ignorePatterns": [
      "**/examples",
      "**/lib",
      "**/dist",
      "**/tmp"
    ],
    "extends": [
      "@faasjs/recommended",
      "@faasjs/react"
    ]
  },
  "engines": {
    "npm": ">=8.0.0",
    "node": ">=16.0.0"
  }
}
