{
  "name": "@slashnotes/mono",
  "version": "1.0.0",
  "type": "module",
  "license": "AGPL-3.0",
  "scripts": {
    "test": "vitest run",
    "ci": "vitest run --coverage",
    "build": "npm run build --workspaces --if-present",
    "clean": "rm -rf packages/*/dist packages/*/*.tsbuildinfo coverage",
    "dev": "concurrently \"npm:dev:*\"",
    "dev:cli": "npm run dev --workspace=packages/cli",
    "dev:desktop": "npm run dev --workspace=packages/desktop",
    "publish:nightly": "node nightly.cjs"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@faasjs/eslint-config-recommended": "*",
    "@faasjs/eslint-config-react": "*",
    "concurrently": "*",
    "vitest": "*",
    "@vitejs/plugin-react": "*",
    "@testing-library/react": "*",
    "jsdom": "*",
    "c8": "*"
  },
  "eslintConfig": {
    "ignorePatterns": [
      "**/examples",
      "**/lib",
      "**/dist",
      "**/tmp"
    ],
    "extends": [
      "@faasjs/recommended",
      "@faasjs/react"
    ]
  },
  "engines": {
    "npm": ">=8.0.0",
    "node": ">=16.0.0"
  }
}
