{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@slashnotes/types": [
        "../../types/src/index"
      ],
      "@slashnotes/md": [
        "../../md/src/index"
      ]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/**/*.test.ts"
  ],
  "references": [
    {
      "path": "../types"
    },
    {
      "path": "../md"
    }
  ]
}
