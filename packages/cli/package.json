{
  "name": "@slashnotes/cli",
  "version": "1.0.0",
  "license": "AGPL-3.0",
  "homepage": "https://github.com/slashnotes/slashnotes",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/slashnotes/slashnotes.git",
    "directory": "packages/cli"
  },
  "bugs": {
    "url": "https://github.com/slashnotes/slashnotes/issues"
  },
  "bin": {
    "slashnotes": "dist/index.js"
  },
  "main": "dist/index.js",
  "type": "module",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc -b",
    "dev": "nodemon --exec 'node --experimental-specifier-resolution=node --loader ./loader.js src/index.ts server --no-open -p 4000 -f ../../docs' --watch src --watch ../builder/src --watch ../md/src --watch ../core/src --watch ../web/src -e ts,tsx"
  },
  "dependencies": {
    "commander": "^11.0.0",
    "@slashnotes/md": "*",
    "@slashnotes/desktop": "*",
    "@slashnotes/web": "*",
    "ws": "*",
    "@faasjs/logger": "*"
  },
  "devDependencies": {
    "nodemon": "*",
    "ts-node": "*",
    "tsconfig-paths": "*",
    "@types/ws": "*",
    "@faasjs/eslint-config-recommended": "*"
  },
  "engines": {
    "npm": ">=8.0.0",
    "node": ">=16.0.0"
  },
  "eslintConfig": {
    "ignorePatterns": [
      "**/dist"
    ],
    "extends": [
      "@faasjs/recommended"
    ]
  }
}
