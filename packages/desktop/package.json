{
  "name": "@slashnotes/desktop",
  "version": "1.0.0",
  "license": "AGPL-3.0",
  "homepage": "https://github.com/slashnotes/slashnotes",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/slashnotes/slashnotes.git",
    "directory": "packages/desktop"
  },
  "bugs": {
    "url": "https://github.com/slashnotes/slashnotes/issues"
  },
  "main": "index.js",
  "scripts": {
    "dev:electron": "wait-on tcp:4000 && wait-on tcp:3000 && APP_ENV=development electron-forge start",
    "dev:vite": "VITE_SERVER=http://localhost:4000 vite",
    "dev": "concurrently \"npm:dev:*\"",
    "lint": "eslint .",
    "build": "tsc && vite build && electron-forge package",
    "test": "vitest run",
    "publish": "electron-forge publish"
  },
  "config": {
    "forge": "./forge.config.js"
  },
  "dependencies": {
    "@slashnotes/server": "*",
    "@slashnotes/md": "*",
    "electron-squirrel-startup": "*"
  },
  "devDependencies": {
    "react": "*",
    "react-dom": "*",
    "@slashnotes/monaco-editor-esm": "*",
    "@mdx-js/mdx": "*",
    "@mdx-js/react": "*",
    "@primer/octicons-react": "*",
    "@types/react": "*",
    "@types/react-dom": "*",
    "@types/node": "*",
    "@types/wicg-file-system-access": "*",
    "vite": "*",
    "@vitejs/plugin-react": "*",
    "typescript": "*",
    "sass": "*",
    "@types/mermaid": "*",
    "mermaid": "*",
    "concurrently": "*",
    "@electron-forge/cli": "*",
    "@electron-forge/maker-squirrel": "*",
    "@electron-forge/maker-zip": "*",
    "electron": "*",
    "wait-on": "*",
    "@faasjs/eslint-config-recommended": "*",
    "@faasjs/eslint-config-react": "*",
    "@types/ws": "*",
    "ws": "*"
  },
  "engines": {
    "npm": ">=8.0.0",
    "node": ">=16.0.0"
  },
  "eslintConfig": {
    "ignorePatterns": [
      "**/dist",
      "**/out"
    ],
    "extends": [
      "@faasjs/recommended",
      "@faasjs/react"
    ]
  }
}
